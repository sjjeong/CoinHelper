<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="view"
            type="com.googry.coinhelper.ui.home.HomeActivity" />
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/cl_root"
            style="@style/RootTopViewGroup"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_exchange"
                    style="@style/TitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    tools:text="@string/app_name" />


                <ImageView
                    android:id="@+id/ic_arrow_forward"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{() -> view.onOpenSideMenuClick()}"
                    android:src="@drawable/ic_action_arrow_forward" />
            </LinearLayout>

            <android.support.design.widget.TabLayout
                android:id="@+id/tl_content"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:tabPadding="2dp"
                app:tabIndicatorHeight="0dp"
                app:tabTextColor="@color/gray2"
                app:tabSelectedTextColor="@color/blue4"
                app:tabMode="scrollable"
                app:tabTextAppearance="@style/TabLayoutTextStyle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/coin_name"
                    android:textSize="18sp" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    android:gravity="end"
                    android:text="@string/last"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="@string/trade_amount"
                    android:textSize="18sp" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


        <FrameLayout
            android:id="@+id/fl_side_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="-65dp"
            android:background="@drawable/bg_round" />
    </android.support.v4.widget.DrawerLayout>

</layout>