<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RootViewGroup">
        <item name="android:background">@drawable/bg_round</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="RootTopViewGroup">
        <item name="android:background">@drawable/bg_top_round</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="FragmentRootViewGroup">
        <item name="android:background">@color/gray1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/gray5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>